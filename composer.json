{
  "name": "riche/website--v3",
  "description": "Сайт RICHE.SKIN, третья итерация",
  "type": "project",
  "license": "proprietary",
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "vendor-dir": "./local/vendor/",
    "allow-plugins": {
      "composer/installers": true,
      "wikimedia/composer-merge-plugin": true,
      "oomphinc/composer-installers-extender": true
    }
  },
  "authors": [
    {
      "name": "Илья Петровский",
      "email": "ilya.petrovsky@yandex.ru"
    },
    {
      "name": "Алексей Петровский",
      "email": "i@im0rg.ru"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Local\\": "./local/classes/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require": {
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "andreyryabin/sprint.editor": "^3.24",
    "andreyryabin/sprint.migration": "^4.1.2",
    "bitrix-expert/tools": "^1.5",
    "bower-asset/inputmask": "^5.0",
    "bower-asset/jquery": "^3.6",
    "bower-asset/jquery-colorbox": "^1.6",
    "bower-asset/js-cookie": "^3.0",
    "bower-asset/normalize-css": "^8.0",
    "bower-asset/slick-carousel": "^1.8",
    "bower-asset/tiny-slider": "^2.9",
    "bower-asset/vanilla-lazyload": "^17.4",
    "composer/installers": "^1.7",
    "hafsoft/php-minifier": "^0.9.1",
    "oomphinc/composer-installers-extender": "^2.0",
    "rosell-dk/webp-convert": "^2.7",
    "webarchitect609/bitrix-cache": "^1.11",
    "webarchitect609/bitrix-user-type": "^0.7.3",
    "wikimedia/composer-merge-plugin": "^2.0"
  },
  "require-dev": {
    "kint-php/kint": "^4.0",
    "kint-php/kint-helpers": "^4.0"
  },
  "extra": {
    "merge-plugin": {
      "require": [
        "./bitrix/composer-bx.json"
      ]
    },
    "installer-types": [
      "bitrix-d7-module",
      "bitrix-module",
      "bitrix-d7-component",
      "bitrix-component",
      "bower-asset",
      "npm-asset",
      "bower-asset-library",
      "npm-asset-library"
    ],
    "installer-paths": {
      "./local/modules/{$name}/": [
        "type:bitrix-d7-module",
        "type:bitrix-module"
      ],
      "./local/components/{$name}/": [
        "type:bitrix-d7-component",
        "type:bitrix-component"
      ],
      "./local/assets/{$name}": [
        "type:bower-asset",
        "type:npm-asset",
        "type:bower-asset-library",
        "type:npm-asset-library",
        "vendor:npm-asset",
        "vendor:bower-asset"
      ]
    }
  }
}
